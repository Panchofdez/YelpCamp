<%include ../partials/header%>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center mb-3">
            <h1>Add New Comment to <%=campground.name%></h1>
        </div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
				<input class="form-control mb-3" type="text" name="comment[text]" placeholder="text">
				<button class="btn btn-lg btn-primary btn-block mb-3">Submit!</button>
			</form>
			<a href="/campgrounds/<%=campground._id%>">Go Back</a>
		</div>
	</div>


<%include ../partials/footer%>