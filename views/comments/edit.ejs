<%include ../partials/header%>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center mb-3">
            <h1>Edit Comment</h1>
        </div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<input class="form-control mb-3" type="text" name="comment[text]" value="<%=comment.text%>">
				<button class="btn btn-lg btn-primary btn-block mb-3">Submit!</button>				
			</form>
			<a href="/campgrounds/<%=campground_id%>">Go Back</a>
		</div>
	</div>


<%include ../partials/footer%>