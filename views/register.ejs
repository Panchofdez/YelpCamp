<% include ./partials/header %>

<div class="row">
   
    <div class="col-md-12">
        <form class="form-signin" action="/register" method="POST">
			<h1 class="mb-3 font-weight-normal">Sign Up</h1>
            <label for="inputUsername" class="sr-only">Username</label>
			<input id="inputUsername" class="form-control mb-3" type="text" name="username" placeholder="username">
			<label for="inputPassword" class="sr-only">Password</label>
			<input id="inputPassword" class="form-control mb-3" type="password" name="password" placeholder="password">
			<label for="inputFirstName" class="sr-only">First Name</label>
			<input id="inputFirstName" class="form-control mb-3" type="text" name="firstName" placeholder="first name">
			<label for="inputLastName" class="sr-only">Last Name</label>
			<input id="inputLastName" class="form-control mb-3" type="text" name="lastName" placeholder="last name">
			<label for="inputEmail" class="sr-only">Email</label>
			<input id="inputEmail" class="form-control mb-3" type="text" name="email" placeholder="email">
			<label for="inputAvatar" class="sr-only">Avatar</label>
			<input id="inputvatar" class="form-control mb-3" type="text" name="avatar" placeholder="enter avatar image url">
			<label for="inputAdminCode" class="sr-only">Admin Code</label>
			<input id="inputAdminCode" class="form-control mb-3" type="password" name="adminCode" placeholder="Admin Code">
			
			<button class="btn btn-lg btn-primary btn-block">Sign Up!</button>

        </form>
		<div class="form-signin">
			<a href="/campgrounds">Go Back</a>
		</div>
       
    </div>
</div>

<% include ./partials/footer %>